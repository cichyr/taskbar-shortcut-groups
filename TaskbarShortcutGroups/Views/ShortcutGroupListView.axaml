<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TaskbarShortcutGroups.Views.ShortcutGroupListView">
    <StackPanel>
        <TextBlock Text="{Binding Greeting, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <ListBox Items="{Binding ShortcutGroups}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button>
                        <Panel>
                            <Image Width="75" Height="50" Source="{Binding IconPath}" />
                            <TextBlock Text="{Binding Name}" />
                        </Panel>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Add new group" Command="{Binding AddNewGroup}" />

        <Button Content="Dialog" Click="ShowDialog" />
    </StackPanel>
</UserControl>