<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>TaskbarShortcutGroups.Avalonia</AssemblyName>
        <RootNamespace>TaskbarShortcutGroups.Avalonia</RootNamespace>
        <OutputType>WinExe</OutputType>
        <UseWindowsForms>true</UseWindowsForms>
        <TargetFramework>net7.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <PropertyGroup>
        <Authors>Dominik Wolny</Authors>
        <Version>0.1.0</Version>
        <PackageId>TaskbarShortcutGroups</PackageId>
        <RepositoryUrl>https://github.com/cichyr/taskbar-shortcut-groups</RepositoryUrl>
    </PropertyGroup>
    <ItemGroup>
        <Content Include="Licenses\*.txt">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
    <ItemGroup>
        <AvaloniaResource Include="Assets\**" />
        <None Remove=".gitignore" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.0.4" />
        <PackageReference Include="Avalonia.Desktop" Version="11.0.4" />
        <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
        <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.0.4" />
        <PackageReference Include="DryIoc.dll" Version="5.4.2" />
        <PackageReference Include="FluentAvaloniaUI" Version="2.0.4" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\TaskbarShortcutGroups.Common\TaskbarShortcutGroups.Common.csproj" />
    </ItemGroup>
</Project>
